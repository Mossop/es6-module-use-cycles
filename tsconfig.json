{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "bin",

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "include": [
    "*.js",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/*.test.ts"
  ]
}
